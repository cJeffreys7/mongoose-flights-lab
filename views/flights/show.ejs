<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Flight</title>
</head>
<body>
  <nav>
    <a href="/flights/index">All Flights</a>
    <a href="/flights/new">Add Flight</a>
  </nav>
  <h1>Flight Details</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Date</th>
        <th>Departure Time</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs.toLocaleDateString() %></td>
        <td><%= flight.departs.toLocaleTimeString().slice(0, -6) + flight.departs.toLocaleTimeString().slice(-3) %></td>
      </tr>
    </tbody>
  </table>
  <h2>Add Flight Ticket</h2>
  <form action="/flights/<%= flight._id %>/tickets" method="post">
    <label>Seat</label>
    <input type="text" name="seat" id="seat-input" required pattern="[A-F][1-9]\d?"><br>
    <label>Price</label>
    <span>$</span><input type="number" name="price" id="price-input"><br>
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <h2>Flight Tickets</h2>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td>$<%= ticket.price %></td>
            <td>
              <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h2>No Flight Tickets Yet</h2>
  <% } %>
</body>
</html>