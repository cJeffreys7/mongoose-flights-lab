<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Flights</title>
  <link rel="stylesheet" href="/stylesheets/flights/index.css">
</head>
<body>
  <nav>
    <a href="/flights/index">All Flights</a>
    <a href="/flights/new">Add Flight</a>
  </nav>
  <h1>All Flights</h1>
  <table>
    <thead>
      <tr>
        <th>Airlines</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure Time</th>
      </tr>
    </thead>
    <tbody>
      <% flights.sort((a, b) => a.departs - b.departs) %>
      <% flights.forEach(function(flight) { %>
        <tr class="<%= flight.departs < Date.now() ? 'late-flight' : '' %>">
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td>
            <a href="/flights/<%= flight._id %>">Flight Details</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>